---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

interface Props {
	title: string;
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />

		<meta name='description' content='Portafolio Daviardev - Jerson David Silva Arjona' />

		<meta name='author' content='daviardev' />
		<meta name='author' content='Jerson David Silva Arjona' />

		<meta name='viewport' content='width=device-width' />

		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />

		<meta name='generator' content={Astro.generator} />

		<title>Jerson Silva Arjona Â· {title}</title>
	</head>
	<body>
		<Navbar />
		<main class='pb-8 block'>
			<div class='w-full ms-auto me-auto ps-4 pt-14 pe-4 max-w-[60ch]'>
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'Geist';
		src: url(/fonts/Geist-Regular.woff2) format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	
	@font-face {
		font-family: 'Geist';
		src: url(/fonts/Geist-SemiBold.woff2) format('woff2');
		font-weight: 600;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Geist';
		src: url(/fonts/Geist-Bold.woff2) format('woff2');
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}

	body {
		font-family: 'Geist', sans-serif;
	}
</style>