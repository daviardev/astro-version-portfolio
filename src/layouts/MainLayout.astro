---
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'

import { ViewTransitions } from 'astro:transitions'

interface Props {
	title: string;
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />

		<meta name='description' content='Portafolio Daviardev - Jerson David Silva Arjona' />

		<meta name='author' content='daviardev' />
		<meta name='author' content='Jerson David Silva Arjona' />

		<meta name='viewport' content='width=device-width' />

		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />

		<meta name='generator' content={Astro.generator} />

		<ViewTransitions />

		<title>Jerson Silva Arjona Â· {title}</title>
	</head>
	<body>
		<main class='pb-8 block'>
			<Navbar />
			<div class='w-full pt-14 pe-4 ps-4 max-w-[50ch] me-auto ms-auto' transition:animate="slide">
				<slot />
			</div>
			<Footer />
		</main>
	</body>
</html>

<style is:global>
	@font-face {
		font-family: 'Geist';
		src: url(/fonts/Geist-Regular.woff2) format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	
	@font-face {
		font-family: 'Geist';
		src: url(/fonts/Geist-SemiBold.woff2) format('woff2');
		font-weight: 600;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Geist';
		src: url(/fonts/Geist-Bold.woff2) format('woff2');
		font-weight: 700;
		font-style: normal;
		font-display: swap;
	}

	body {
		color: rgb(31, 41, 51);
		margin: 0;
		position: relative;
		min-height: 100vh;
		line-height: 1.5;
		font-family: 'Geist', sans-serif;
		background-color: rgb(240, 231, 219);
	}
</style>