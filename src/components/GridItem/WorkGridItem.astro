---
interface Props {
    id: number,
    title: string,
    thumbnail: string
}

const { id, title, thumbnail } = Astro.props
---

<div class="w-full flex justify-center">
    <a href={`/proyectos/${id}`}>
        <div class="relative">
            <img
                src={thumbnail}
                title={title}
                class="rounded-xl"
                loading="lazy"
            />
            <a href=""></a>
        </div>
    </a>
</div>