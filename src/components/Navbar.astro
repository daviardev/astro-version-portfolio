---
import Logo from "./Logo.astro";

import LinkItem from "./LinkItem.astro";
import ProfileLink from "./ProfileLink.astro";
---

<header>
    <nav
        class="fixed w-full bg-[rgba(255,255,255,0.25)] backdrop-blur-[10px] z-20"
    >
        <div
            class="w-full ms-auto me-auto ps-4 pe-4 flex p-2 max-w-3xl flex-wrap items-center justify-between"
        >
            <div class="flex items-center mr-5">
                <h1 class="font-bold text-2xl leading-[1.33] tracking-tighter">
                    <Logo />
                </h1>
            </div>
            <div
                class="hidden flex-col w-full items-center mt-4 gap-2 flex-grow md:flex md:flex-row md:w-auto md:mt-0"
            >
                <LinkItem href="/proyectos">Proyectos</LinkItem>

                <LinkItem href="/recursos">Recursos</LinkItem>

                <ProfileLink
                    href="https://github.com/daviardev"
                    target="_blank"
                >
                    <svg
                        stroke="currentColor"
                        fill="currentColor"
                        stroke-width="0"
                        viewBox="0 0 512 512"
                        height="1em"
                        width="1em"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M256 32C132.3 32 32 134.9 32 261.7c0 101.5 64.2 187.5 153.2 217.9a17.56 17.56 0 003.8.4c8.3 0 11.5-6.1 11.5-11.4 0-5.5-.2-19.9-.3-39.1a102.4 102.4 0 01-22.6 2.7c-43.1 0-52.9-33.5-52.9-33.5-10.2-26.5-24.9-33.6-24.9-33.6-19.5-13.7-.1-14.1 1.4-14.1h.1c22.5 2 34.3 23.8 34.3 23.8 11.2 19.6 26.2 25.1 39.6 25.1a63 63 0 0025.6-6c2-14.8 7.8-24.9 14.2-30.7-49.7-5.8-102-25.5-102-113.5 0-25.1 8.7-45.6 23-61.6-2.3-5.8-10-29.2 2.2-60.8a18.64 18.64 0 015-.5c8.1 0 26.4 3.1 56.6 24.1a208.21 208.21 0 01112.2 0c30.2-21 48.5-24.1 56.6-24.1a18.64 18.64 0 015 .5c12.2 31.6 4.5 55 2.2 60.8 14.3 16.1 23 36.6 23 61.6 0 88.2-52.4 107.6-102.3 113.3 8 7.1 15.2 21.1 15.2 42.5 0 30.7-.3 55.5-.3 63 0 5.4 3.1 11.5 11.4 11.5a19.35 19.35 0 004-.4C415.9 449.2 480 363.1 480 261.7 480 134.9 379.7 32 256 32z"
                        ></path>
                    </svg>
                     Mi perfil
                </ProfileLink>
            </div>

            <div class="flex-[1]">
                <div class="flex justify-end">
                    <div class="inline-block transform-none opacity-100">
                        <button
                            type="button"
                            class="inline-flex items-center justify-center relative align-middle outline-offset-2 rounded-md font-semibold h-[40px] min-w-[40px] text-base text-white p-0 pe-4 ps-4 bg-[#805adc]"
                        >
                            <svg
                                viewBox="0 0 24 24"
                                focusable="false"
                                fill="currentColor"
                                class="w-[15px]"
                            >
                                <path
                                    fill="currentColor"
                                    d="M21.4,13.7C20.6,13.9,19.8,14,19,14c-5,0-9-4-9-9c0-0.8,0.1-1.6,0.3-2.4c0.1-0.3,0-0.7-0.3-1 c-0.3-0.3-0.6-0.4-1-0.3C4.3,2.7,1,7.1,1,12c0,6.1,4.9,11,11,11c4.9,0,9.3-3.3,10.6-8.1c0.1-0.3,0-0.7-0.3-1 C22.1,13.7,21.7,13.6,21.4,13.7z"
                                ></path>
                            </svg>
                        </button>
                    </div>

                    <div class="ml-2 inline-block md:hidden">
                        <button
                            type="button"
                            class="inline-flex items-center justify-center relative whitespace-nowrap outline-2 leading-[1.2] rounded-md font-semibold transition-colors h-10 min-w-[2.5rem] text-base ps-4 pe-4 border border-gray-200 text-gray-800 p-0"
                        >
                            <svg
                                viewBox="0 0 24 24"
                                focusable="false"
                                class="w-[1em] h-[1em] inline-flex leading-[1em] flex-shrink-0 text-current align-middle"
                                aria-hidden="true"
                                ><path
                                    fill="currentColor"
                                    d="M 3 5 A 1.0001 1.0001 0 1 0 3 7 L 21 7 A 1.0001 1.0001 0 1 0 21 5 L 3 5 z M 3 11 A 1.0001 1.0001 0 1 0 3 13 L 21 13 A 1.0001 1.0001 0 1 0 21 11 L 3 11 z M 3 17 A 1.0001 1.0001 0 1 0 3 19 L 21 19 A 1.0001 1.0001 0 1 0 21 17 L 3 17 z"
                                ></path></svg
                            >
                        </button>
                        <div
                            style="visibility: visible; min-width: max-content; --popper-transform-origin: top right; position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate(-8px, 56px);"
                            class="css-r6z5ec"
                            data-popper-placement="bottom-end"
                        >
                            <div
                                class="chakra-menu__menu-list css-1kfu8nn"
                                tabindex="-1"
                                role="menu"
                                id="menu-list-navbar-menu"
                                aria-orientation="vertical"
                                style="transform-origin: var(--popper-transform-origin); opacity: 1; visibility: visible; transform: none;"
                            >
                                <a
                                    class="chakra-link chakra-menu__menuitem css-jhiu64"
                                    id="menu-list-navbar-menu-menuitem-:rd:"
                                    role="menuitem"
                                    tabindex="0"
                                    href="/"
                                    data-index="0"
                                >
                                    Inicio
                                </a>

                                <a
                                    class="chakra-link chakra-menu__menuitem css-jhiu64"
                                    id="menu-list-navbar-menu-menuitem-:re:"
                                    role="menuitem"
                                    tabindex="-1"
                                    href="/proyectos"
                                    data-index="1"
                                >
                                    Proyectos
                                </a>

                                <a
                                    class="chakra-link chakra-menu__menuitem css-jhiu64"
                                    id="menu-list-navbar-menu-menuitem-:rf:"
                                    role="menuitem"
                                    tabindex="-1"
                                    href="/recursos"
                                    data-index="2"
                                >
                                    Recursos
                                </a>

                                <a
                                    class="chakra-link chakra-menu__menuitem css-jhiu64"
                                    id="menu-list-navbar-menu-menuitem-:rg:"
                                    role="menuitem"
                                    tabindex="-1"
                                    href="https://github.com/daviardev"
                                    data-index="3"
                                >
                                    Mi perfil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>
