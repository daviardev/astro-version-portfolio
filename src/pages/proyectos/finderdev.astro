---
import P from "../../components/P.astro";
import ProjectIMG from "../../components/Projects/ProjectIMG.astro";
import Title from '../../components/Projects/Title.astro'
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="finderdev">
    <article class="relative">
        <div class="w-full ms-auto me-auto max-w-[60ch] ps-4 pe-4">
            <Title year={2022}>
                finderdev
            </Title>
            <P>Aplicacion para buscar perfiles de GitHub.</P>
            <ul class="ml-4 my-4">
                <li>
                    <span class="whitespace-nowrap inline-block align-middle ps-1 pe-1 uppercase text-xs rounded-sm font-bold bg-green-100 text-green-800 mr-2">
                        deploy
                    </span>
                    <a
                        href="https://finderdev.vercel.app/"
                        target="_blank"
                        class="text-[rgb(32,122,237)] hover:underline"
                    >
                        https://finderdev.vercel.app/
                        <svg
                            viewBox="0 0 24 24"
                            focusable="false"
                        >
                            <g
                                fill="none"
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-width="2"
                            >
                            <path
                                d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                <path
                                    d="M15 3h6v6"
                                ></path>
                                <path
                                    d="M10 14L21 3"
                                ></path>
                            </g>
                        </svg>
                    </a>
                </li>
                <li>
                    <span class="whitespace-nowrap inline-block align-middle ps-1 pe-1 uppercase text-xs rounded-sm font-bold bg-green-100 text-green-800 mr-2">
                        plataformas
                    </span>
                    <span>
                        Windows/macOS/Linux/iOS/Android
                    </span>
                </li>
                <li>
                    <span class="whitespace-nowrap inline-block align-middle ps-1 pe-1 uppercase text-xs rounded-sm font-bold bg-green-100 text-green-800 mr-2">
                        herramientas
                    </span>
                    <span>
                        HTML5, CSS3, JS, API GitHub
                    </span>
                </li>
            </ul>
            <ProjectIMG
                src="/daviardev.jpg"
                alt="inkdrop"
            />
            <ProjectIMG
                src="/daviardev.jpg"
                alt="inkdrop"
            />
              <ProjectIMG
                src="/daviardev.jpg"
                alt="inkdrop"
            />
        </div>
    </article>
</MainLayout>

<style>
    svg {
        @apply w-[.7em] h-[.7em] inline-block leading-[1em] align-middle;
    }
</style>